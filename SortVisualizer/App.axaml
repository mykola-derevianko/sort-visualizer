<Application
    x:Class="SortVisualizer.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://SortVisualizer/Styles/Styles.axaml" />
    </Application.Styles>


    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#2D2D2D</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBackground">#272727</SolidColorBrush>
    </Application.Resources>
</Application>