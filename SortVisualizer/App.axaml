<Application
    x:Class="SortVisualizer.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SortVisualizer.Converters"
    xmlns:localViews="clr-namespace:SortVisualizer.Views"
    xmlns:viewmodels="clr-namespace:SortVisualizer.ViewModels"
    RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://SortVisualizer/Styles/Styles.axaml" />
    </Application.Styles>

    <Application.DataTemplates>
        <DataTemplate DataType="viewmodels:AlgorithmInfoViewModel">
            <localViews:AlgorithmInfoView />
        </DataTemplate>
        <DataTemplate DataType="viewmodels:VisualizationViewModel">
            <localViews:VisualizationView />
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#2D2D2D</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBackground">#272727</SolidColorBrush>
        <SolidColorBrush x:Key="ExpanderChevronForeground" Color="White" />
        <SolidColorBrush x:Key="ExpanderChevronForegroundPointerOver" Color="White" />
        <SolidColorBrush x:Key="ExpanderChevronForegroundPressed" Color="White" />


        <local:SliderValueToWidthConverter x:Key="SliderValueToWidthConverter" />
    </Application.Resources>

</Application>
