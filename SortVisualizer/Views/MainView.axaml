<UserControl
    x:Class="SortVisualizer.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localViews="clr-namespace:SortVisualizer.Views"
    xmlns:models="clr-namespace:SortVisualizer.Models"
    xmlns:viewmodels="clr-namespace:SortVisualizer.ViewModels"
    xmlns:views="clr-namespace:SortVisualizer.Views"
    x:DataType="viewmodels:MainViewModel">


    <Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="2*,8*">
        <!--  Sidebar  -->
        <Border Grid.Column="0" Classes="sidebar">
            <ListBox
                Background="Transparent"
                BorderThickness="0"
                Classes="sidebar-listbox"
                ItemsSource="{Binding SortAlgorithms}"
                SelectedItem="{Binding SelectedAlgorithm, Mode=TwoWay}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!--  Dynamic main content  -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
    </Grid>
</UserControl>
