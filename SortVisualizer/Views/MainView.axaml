<UserControl
    x:Class="SortVisualizer.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="clr-namespace:SortVisualizer.ViewModels"
    xmlns:views="clr-namespace:SortVisualizer.Views"
    x:DataType="viewmodels:MainViewModel"
    Classes="main-view">

    <Grid Background="#272727" ColumnDefinitions="2*,8*">
        <Border
            Grid.Column="0"
            Padding="20"
            Background="#2D2D2D">
            <StackPanel>
                <TextBlock
                    Height="48"
                    Margin="0,0,0,20"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Sidebar" />

                <Button
                    Height="48"
                    Margin="0,0,0,10"
                    Content="Option 1" />
                <Button
                    Height="48"
                    Margin="0,0,0,10"
                    Content="Option 2" />
                <Button Height="48" Content="Option 3" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" RowDefinitions="7*,3*">
            <views:PlayerView Grid.Row="0" DataContext="{Binding Player}" />
            <Border Grid.Row="1" Background="#272727" />
        </Grid>

    </Grid>
</UserControl>
